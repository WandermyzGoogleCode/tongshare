<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= I18n.t 'activerecord.errors.template.header', :count => @event.errors.count %></h2>

      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div id="event_details">
    <fieldset>
      <legend>日程详情</legend>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :begin %><br />
        <%= f.calendar_date_select :begin%>
      </div>
      <div class="field">
        <%= f.label :end %><br />
        <%= f.calendar_date_select :end %>
      </div>
      <div class="field">
        <%= frequency_radio_buttons f %>
      </div>

      <div id="repeat_options" style="display:none">
        <fieldset>
          <legend id="repeat_legend">不重复</legend>
          <div class="field">
              <%= f.label :rrule_interval, "每隔" %>
              <%= f.number_field :rrule_interval, :min => 1, :maxlength => 3 %>
              <span id="interval_suffix">天</span>
          </div>
          <div id="rrule_days_panel" style="display:none">
            重复于 <%= days_check_boxes f %>
          </div>
          <div id="rrule_end_panel">
            日程发生 <%= f.number_field :rrule_count, :min => 1, :maxlength => 3 %> 次后停止重复
            <%#TODO: repeat_until (how to assign this value to Recurrence??; TODO: never?%>
          </div>
        </fieldset>
      </div>
      <%= javascript_tag "show_repeat_options(\"#{@event.rrule_frequency}\");" %>

      <div class="field">
        <%= f.label :location %><br />
        <%= f.text_field :location %>
      </div>
      <div class="field">
        <%= f.label :extra_info %><br />
        <%= f.text_area :extra_info %>
      </div>
    </fieldset>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
